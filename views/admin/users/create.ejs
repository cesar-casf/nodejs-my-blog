<%- include("../../../views/partials/header.ejs"); -%>
<body>
    <%- include("../../../views/partials/navbar.ejs"); -%>

    <div class="container">
        <div class="card mt-4">
            <div class="card-header">
                Criação de usuários
            </div>
            <div class="card-body">
                <form action="/user/create" method="post">
                    <div class="form-group">
                        <div>
                            <label for="name">Nome:</label>
                            <input type="text" name="name" class="form-control" placeholder="Nome do usuário">
                        </div>
                        <div>
                            <label for="email">Email:</label>
                            <input type="email" name="email" placeholder="email@exemplo.com" class="form-control">
                        </div>
                        <div class="mt-3 mb-3">
                            <label for="password">Senha:</label>
                            <input type="password" name="password" class="form-control" placeholder="*****">
                        </div>
                        <button type="submit" class="btn btn-success btn-block">Criar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</body>
